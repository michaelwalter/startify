    "lib": ["es5", "es6", "dom"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "experimentalDecorators": true,
    "sourceMap": true
